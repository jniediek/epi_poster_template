\mode<presentation>

\RequirePackage{tikz}

\definecolor{epibackground}{HTML}{000000}
\definecolor{epiframecolor}{HTML}{00FFFF}
\definecolor{epititlecolor}{HTML}{CCFF99}
\definecolor{epitextcolor}{HTML}{EEEEEE}

\setbeamertemplate{navigation symbols}{}
\setbeamertemplate{itemize items}[circle]

\newlength{\frameshiftside}
\newlength{\frameshiftbottom}
\newlength{\frameshifttop}

\setlength{\frameshifttop}{1.2cm}
\setlength{\frameshiftside}{.6cm}
\setlength{\frameshiftbottom}{.6cm}

\setbeamercolor{background canvas}{bg=epibackground}
\setbeamercolor{structure}{fg=epitextcolor}
\setbeamercolor{normal text}{fg=epitextcolor}
\setbeamercolor{items}{fg=epitextcolor}
\beamersetleftmargin{.5cm}
\beamersetrightmargin{.5cm}

\setbeamertemplate{frametitle}{
  \LARGE{
    \vskip1ex
 \textcolor{epititlecolor}{
  \hfill \insertframetitle \hfill
}}}

\setbeamertemplate{background}{
    \begin{tikzpicture}[overlay,remember picture]
      \draw[epiframecolor] ([shift={(\frameshiftside,\frameshiftbottom)}]current page.south west)
      rectangle ([shift={(-\frameshiftside,-\frameshifttop)}]current page.north east);
\end{tikzpicture}
  }

\mode<all>